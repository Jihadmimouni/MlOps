[flake8]
# Flake8 configuration for ML application

# Maximum line length
max-line-length = 100

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    *.egg-info,
    build,
    dist,
    .pytest_cache

# Error codes to ignore (E203: whitespace before ':', W503: line break before binary operator)
ignore = E203,W503

# Maximum complexity
max-complexity = 10

# Show source code for each error
show-source = True

# Show the relevant error codes
show-pep8 = True
